---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Fabián.dev - Desarrollador Web Full-Stack">
  <Navbar />

  <!-- Fondo gradiente suave -->
  <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-emerald-900/20 to-teal-900/10 dark:from-zinc-950 dark:to-zinc-900"></div>
    <div class="particles absolute inset-0"></div>
  </div>

  <!-- Estrellas flotantes -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none z-10">
    <div class="star absolute top-10 left-10 w-2 h-2 bg-emerald-300 rounded-full animate-pulse-slow"></div>
    <div class="star absolute top-40 right-20 w-3 h-3 bg-teal-300 rounded-full animate-pulse-slow delay-1000"></div>
    <div class="star absolute bottom-20 left-40 w-1.5 h-1.5 bg-emerald-200 rounded-full animate-pulse-slow delay-2000"></div>
    <div class="star absolute top-1/3 right-1/3 w-2 h-2 bg-teal-200 rounded-full animate-pulse-slow delay-3000"></div>
  </div>

  <main class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 z-10">

    <!-- HERO -->
    <section class="min-h-screen flex items-center justify-center py-12 md:py-0 text-center">
      <div class="max-w-4xl">
        <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-none text-emerald-600 dark:text-emerald-300">
          Hola, soy<br />Fabián.
        </h1>
        <p class="text-4xl sm:text-5xl md:text-6xl font-bold text-emerald-700 dark:text-emerald-400 mt-4">
          Un desarrollador web full-stack.
        </p>

        <p class="mt-8 text-lg sm:text-xl text-zinc-400 dark:text-zinc-300 max-w-3xl mx-auto">
          Me apasiona crear experiencias que sean atractivas, accesibles y centradas en el usuario.
        </p>
      </div>
    </section>

    <!-- STACK PRINCIPAL con barras -->
    <section class="py-20">
      <h2 class="text-3xl font-bold text-center mb-14
                 bg-gradient-to-r from-indigo-400 to-purple-400
                 text-transparent bg-clip-text">
        Stack principal
      </h2>

      <div class="max-w-3xl mx-auto space-y-8">

        <!-- Angular -->
        <div>
          <div class="flex justify-between mb-2">
            <span class="font-medium text-zinc-200">Angular</span>
            <span class="text-sm text-zinc-400">intermedio</span>
          </div>
          <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
            <div
              class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
              data-value="40"
            ></div>
          </div>
        </div>

        <!-- NestJS -->
        <div>
          <div class="flex justify-between mb-2">
            <span class="font-medium text-zinc-200">NestJS</span>
            <span class="text-sm text-zinc-400">Intermedio / Producción</span>
          </div>
          <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
            <div
              class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
              data-value="60"
            ></div>
          </div>
        </div>

        <!-- Astro -->
        <div>
          <div class="flex justify-between mb-2">
            <span class="font-medium text-zinc-200">Astro</span>
            <span class="text-sm text-zinc-400">Básico</span>
          </div>
          <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
            <div
              class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
              data-value="20"
            ></div>
          </div>
        </div>

        <!-- Firebase -->
        <div>
          <div class="flex justify-between mb-2">
            <span class="font-medium text-zinc-200">Firebase</span>
            <span class="text-sm text-zinc-400">intermedio</span>
          </div>
          <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
            <div
              class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
              data-value="40"
            ></div>
          </div>
        </div>

      </div>
    </section>

<!-- HABILIDADES -->
