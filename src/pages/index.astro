   <!-- PROYECTOS DESTACADOS -->
<section class="py-16 md:py-24">
  <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12 md:mb-16 bg-gradient-to-r from-indigo-400 to-purple-400 text-transparent bg-clip-text">
    Proyectos destacados
  </h2>

  <div class="max-w-5xl mx-auto space-y-8">
    <!-- Tarjeta 1 -->
    <div class="bg-purple-500/30 dark:bg-purple-900/30 backdrop-blur-md rounded-3xl overflow-hidden shadow-xl 
                 hover:shadow-2xl hover:shadow-purple-500/20 transition-shadow duration-300
                 grid grid-cols-1 md:grid-cols-2">
      <!-- Imagen -->
      <div class="h-64 md:h-auto overflow-hidden">
        <img 
          src="/images/pagina de inicio raicesmx.png" 
          alt="Marketplace educativo" 
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        />
      </div>
      
      <!-- Contenido -->
      <div class="p-8 flex flex-col justify-center">
        <h3 class="text-2xl font-bold text-white dark:text-purple-300 mb-4">
          Marketplace
        </h3>
        <p class="text-white dark:text-purple-200 mb-6">
          Plataforma para docentes con marketplace, verificación y pagos.
        </p>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-purple-600/50 text-xs rounded-full text-white">Angular</span>
          <span class="px-3 py-1 bg-purple-600/50 text-xs rounded-full text-white">NestJS</span>
          <span class="px-3 py-1 bg-purple-600/50 text-xs rounded-full text-white">MySQL</span>
        </div>
      </div>
    </div>
  </div>
</section>

    <Footer />
  </main>

  <!-- Estilos -->
  <style>
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    .animate-fade-in { animation: fadeIn 1.5s ease-out; }

    .particles {
      background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><circle cx="10" cy="10" r="1" fill="white" opacity="0.3"/></svg>') repeat;
      animation: particles 60s linear infinite;
      opacity: 0.15;
    }
    @keyframes particles {
      0% { transform: translateY(0) translateX(0); }
      100% { transform: translateY(-100vh) translateX(-50vw); }
    }

    .skill-bar {
      width: 0;
      transition: width 1.5s ease-out;
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const bars = document.querySelectorAll(".skill-bar");

      const barObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const bar = entry.target;

              if (bar instanceof HTMLElement) {
                const value = bar.dataset.value;
                bar.style.width = value + "%";
              }

              barObserver.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.3 }
      );

      bars.forEach((bar) => {
        barObserver.observe(bar);
      });
    });
  </script>

</BaseLayout>