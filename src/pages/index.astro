---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
---

<BaseLayout title="Fabián.dev - Desarrollador Web Full-Stack">
  <Navbar />

  <!-- Fondo partículas (más sutil en móvil) -->
  <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden opacity-70 md:opacity-100">
    <div class="absolute inset-0 bg-gradient-to-b from-indigo-950/30 to-transparent"></div>
    <div class="particles absolute inset-0"></div>
  </div>

  <main class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 z-10">

    <!-- HERO -->
    <section class="min-h-[90vh] flex items-center justify-center py-12 md:py-0">
      <div class="text-center max-w-3xl">
        <span class="text-indigo-400 text-xs sm:text-sm uppercase tracking-widest mb-4 block animate-fade-in">
          Desarrollador Web Full-Stack
        </span>

        <h1 class="text-3xl sm:text-3xl md:text-6xl lg:text-6xl font-black leading-tight mb-6 md:mb-8">
          <span id="typing" class="text-white block">Construyo experiencias</span>
          <span class="text-indigo-400">rápidas y escalables</span>
        </h1>

        <p class="text-base sm:text-lg text-zinc-400 max-w-xl mx-auto mb-8 md:mb-10 leading-relaxed">
          Angular · NestJS · Astro · Firebase<br />
          Rendimiento extremo y código que escala sin esfuerzo.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="/projects"
            class="w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-full text-white font-semibold
                   hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 shadow-lg hover:shadow-indigo-600/40 text-center"
          >
            Ver proyectos
          </a>
          <a
            href="https://github.com/tuusuario"
            target="_blank"
            class="w-full sm:w-auto px-8 py-4 border border-indigo-500/50 rounded-full text-indigo-400 font-semibold
                   hover:bg-indigo-500/10 hover:border-indigo-400 transition-all duration-300 text-center"
          >
            GitHub
          </a>
        </div>
      </div>
    </section>

    <section class="py-20">
  <h2 class="text-3xl font-bold text-center mb-14
             bg-gradient-to-r from-indigo-400 to-purple-400
             text-transparent bg-clip-text">
    Stack principal
  </h2>

  <div class="max-w-3xl mx-auto space-y-8">

    <!-- Angular -->
    <div>
      <div class="flex justify-between mb-2">
        <span class="font-medium text-zinc-200">Angular</span>
        <span class="text-sm text-zinc-400">intermedio</span>
      </div>
      <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
  <div
    class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
    data-value="40"
  ></div>
</div>

    </div>

    <!-- NestJS -->
    <div>
      <div class="flex justify-between mb-2">
        <span class="font-medium text-zinc-200">NestJS</span>
        <span class="text-sm text-zinc-400">Intermedio / Producción</span>
      </div>
      <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
  <div
    class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
    data-value="60"
  ></div>
</div>

    </div>

    <!-- Astro -->
    <div>
      <div class="flex justify-between mb-2">
        <span class="font-medium text-zinc-200">Astro</span>
        <span class="text-sm text-zinc-400">Basico</span>
      </div>
     <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
  <div
    class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
    data-value="20"
  ></div>
</div>

    </div>

    <!-- Firebase -->
    <div>
      <div class="flex justify-between mb-2">
        <span class="font-medium text-zinc-200">Firebase</span>
        <span class="text-sm text-zinc-400">intermedio</span>
      </div>
      <div class="h-3 bg-zinc-800 rounded-full overflow-hidden">
  <div
    class="skill-bar h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full"
    data-value="40"
  ></div>
</div>

    </div>

  </div>
</section>


    <!-- PROYECTOS -->
    <section class="py-16 md:py-24">
      <h2 class="text-3xl sm:text-4xl font-bold text-center mb-12 md:mb-16 bg-gradient-to-r from-indigo-400 to-purple-400 text-transparent bg-clip-text">
        Proyectos destacados
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 max-w-5xl mx-auto">
        <div class="project-card bg-zinc-900/60 backdrop-blur-md border border-zinc-800 rounded-xl sm:rounded-2xl p-6 md:p-8
                     hover:border-indigo-500 hover:shadow-2xl hover:shadow-indigo-500/20 transition-all duration-500 group">
          <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4 group-hover:text-indigo-400 transition-colors">
            Marketplace educativo
          </h3>
          <p class="text-sm sm:text-base text-zinc-400 mb-4 md:mb-6">
            Plataforma para docentes con marketplace, verificación y pagos integrados.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-zinc-800 text-xs rounded-full text-indigo-300">Angular</span>
            <span class="px-3 py-1 bg-zinc-800 text-xs rounded-full text-indigo-300">NestJS</span>
            <span class="px-3 py-1 bg-zinc-800 text-xs rounded-full text-indigo-300">MySQL</span>
          </div>
        </div>

        <div class="project-card bg-zinc-900/60 backdrop-blur-md border border-zinc-800 rounded-xl sm:rounded-2xl p-6 md:p-8
                     hover:border-indigo-500 hover:shadow-2xl hover:shadow-indigo-500/20 transition-all duration-500 group">
          <h3 class="text-xl md:text-2xl font-bold mb-3 md:mb-4 group-hover:text-indigo-400 transition-colors">
            App de asistencia QR
          </h3>
          <p class="text-sm sm:text-base text-zinc-400 mb-4 md:mb-6">
            Registro de asistencia con QR y sincronización con Google Sheets.
          </p>
          <div class="flex flex-wrap gap-2">
            <span class="px-3 py-1 bg-zinc-800 text-xs rounded-full text-indigo-300">Android</span>
            <span class="px-3 py-1 bg-zinc-800 text-xs rounded-full text-indigo-300">Firebase</span>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Estilos -->
  <style>
    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    .animate-fade-in { animation: fadeIn 1.5s ease-out; }

    .particles {
      background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100"><circle cx="10" cy="10" r="1" fill="white" opacity="0.3"/></svg>') repeat;
      animation: particles 60s linear infinite;
      opacity: 0.15;
    }
    @keyframes particles {
      0% { transform: translateY(0) translateX(0); }
      100% { transform: translateY(-100vh) translateX(-50vw); }
    }

    #typing {
      overflow: hidden;
      border-right: 0.15em solid indigo;
      white-space: nowrap;
      animation: typing 3.5s steps(30) forwards, blink 0.75s step-end infinite;
    }
    @keyframes typing {
      from { width: 0 }
      to { width: 100% }
    }
    @keyframes blink {
      from, to { border-color: transparent }
      50% { border-color: indigo; }
    }

    /* Ajuste móvil para typing */
    @media (max-width: 640px) {
      #typing { font-size: 1.5rem; }
    }
    .skill-bar {
  width: 0;
  transition: width 1.5s ease-out;
}

  </style>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const bars = document.querySelectorAll(".skill-bar");

    const barObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const bar = entry.target;

            if (bar instanceof HTMLElement) {
              const value = bar.dataset.value;
              bar.style.width = value + "%";
            }

            barObserver.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.3 }
    );

    bars.forEach((bar) => {
      barObserver.observe(bar);
    });
  });
</script>

</BaseLayout>